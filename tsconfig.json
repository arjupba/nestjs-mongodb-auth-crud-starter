{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@app/google-api": [
        "libs/google-api/src"
      ],
      "@app/google-api/*": [
        "libs/google-api/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}